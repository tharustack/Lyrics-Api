{
  "version": 2,
  "rewrites": [
    {
      "source": "/api/search",
      "destination": "/api/search.js"
    },
    {
      "source": "/api/lyrics",
      "destination": "/api/lyrics.js"
    },
    {
      "source": "/api/genius/search",
      "destination": "/api/genius/search.js"
    },
    {
      "source": "/api/genius/lyrics",
      "destination": "/api/genius/lyrics.js"
    },
    {
      "source": "/api/sinhala/search",
      "destination": "/api/sinhala/search.js"
    },
    {
      "source": "/api/sinhala/lyrics",
      "destination": "/api/sinhala/lyrics.js"
    },
    {
      "source": "/api",
      "destination": "/api/index.js"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type"
        }
      ]
    }
  ]
}
